{
  "name": "waitlist",
  "type": "module",
  "version": "0.0.1",
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3"
    ]
  },
  "scripts": {
    "client": "astro dev",
    "build:client": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "format": "pnpm exec prettier . --write",
    "format:check": "pnpm exec prettier . --check",
    "lint": "eslint 'src/**/*.{js,ts,tsx,astro}'",
    "worker": "wrangler dev",
    "dev": "concurrently \"pnpm run client\" \"pnpm run worker\"",
    "dryrun:staging": "pnpm run build:client && wrangler deploy --dry-run --env staging",
    "dryrun:prod": "pnpm run build:client && wrangler deploy --dry-run --env production",
    "deploy:staging": "pnpm run build:client && wrangler deploy --env staging",
    "deploy:prod": "pnpm run build:client && wrangler deploy --env production",
    "db:generate": "drizzle-kit generate",
    "db:migrate:local": "wrangler d1 migrations apply waitlist_local_db --local",
    "db:migrate:staging": "wrangler d1 migrations apply waitlist_staging_db --remote --env staging",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@astrojs/react": "^4.4.2",
    "@tailwindcss/vite": "^4.1.18",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "astro": "^5.16.5",
    "concurrently": "^9.2.1",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.0",
    "jose": "^6.1.3",
    "lucide-react": "^0.561.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tailwindcss": "^4.1.18",
    "wrangler": "^4.54.0"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.10.15",
    "@cloudflare/workers-types": "^4.20251213.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.0.1",
    "@typescript-eslint/parser": "^8.49.0",
    "@vitest/coverage-v8": "4.0.15",
    "better-sqlite3": "^12.5.0",
    "daisyui": "^5.5.13",
    "drizzle-kit": "^0.31.8",
    "drizzle-seed": "^0.3.1",
    "eslint": "^9.39.2",
    "eslint-plugin-astro": "^1.5.0",
    "prettier": "3.7.4",
    "prettier-plugin-astro": "0.14.1",
    "prettier-plugin-tailwindcss": "0.7.2",
    "vitest": "^4.0.15"
  }
}
